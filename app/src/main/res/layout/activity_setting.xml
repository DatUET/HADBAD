<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity"
    android:background="#1b1e44">

    <LinearLayout
        android:id="@+id/layout_change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_key"
            android:layout_weight="3"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Your Password"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   You should change your password every 3 months to ensure the security"
                android:textColor="#C4C4C4"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            android:layout_weight="3"
            android:layout_gravity="center"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C4C4C4"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sw_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reciving notification for new post: "
        android:textSize="17sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_user_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1b1e44"/>

</LinearLayout>